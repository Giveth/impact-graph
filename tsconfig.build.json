{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./",
        "noEmit": false,
        // Less strict for tests to compile
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "migration/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}